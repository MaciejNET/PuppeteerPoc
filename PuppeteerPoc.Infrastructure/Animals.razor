<div class="d-flex justify-content-center align-items-center vh-100">
    <table class="table table-striped table-bordered w-75">
        <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Species</th>
            <th>Weight</th>
            <th>Is Domestic</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var animal in AnimalModels)
        {
        <tr>
            <td>@animal.Name</td>
            <td>@animal.Age</td>
            <td>@animal.Species</td>
            <td>@animal.Weight</td>
            <td><input type="checkbox" checked="@animal.IsDomestic" /></td>
        </tr>
        }
        </tbody>
    </table>
</div>

@code {
    [Parameter] public List<Animal> AnimalModels { get; set; } = [];
}